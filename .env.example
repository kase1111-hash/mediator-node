# NatLangChain Configuration
CHAIN_ENDPOINT=http://localhost:8545
CHAIN_ID=natlang-1

# Consensus Mode: permissionless | dpos | poa | hybrid
CONSENSUS_MODE=permissionless

# LLM Configuration
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-api-key-here
OPENAI_API_KEY=your-openai-key-here
LLM_MODEL=claude-3-5-sonnet-20241022

# Mediator Configuration
MEDIATOR_PRIVATE_KEY=your-private-key-here
MEDIATOR_PUBLIC_KEY=your-public-key-here
FACILITATION_FEE_PERCENT=1.0

# DPoS Configuration (if applicable)
BONDED_STAKE_AMOUNT=100
MIN_EFFECTIVE_STAKE=100

# PoA Configuration (if applicable)
POA_AUTHORITY_KEY=your-authority-key-here

# Vector Database Configuration
VECTOR_DB_PATH=./vector-db
VECTOR_DIMENSIONS=1536
MAX_INTENTS_CACHE=10000

# Reputation Configuration
REPUTATION_CHAIN_ENDPOINT=http://localhost:8546

# Acceptance Window (hours)
ACCEPTANCE_WINDOW_HOURS=72

# Logging
LOG_LEVEL=info

# =============================================================================
# Security Apps Configuration
# =============================================================================

# Boundary Daemon - Policy enforcement and audit logging
# @see https://github.com/kase1111-hash/boundary-daemon-
BOUNDARY_DAEMON_ENABLED=false
BOUNDARY_DAEMON_URL=http://localhost:9000
# BOUNDARY_DAEMON_SOCKET=/var/run/boundary-daemon.sock
BOUNDARY_DAEMON_TOKEN=your-daemon-token-here
BOUNDARY_DAEMON_TIMEOUT=5000
BOUNDARY_DAEMON_FAIL_OPEN=false
BOUNDARY_DAEMON_RETRIES=3

# Boundary SIEM - Security event management and threat detection
# @see https://github.com/kase1111-hash/Boundary-SIEM
BOUNDARY_SIEM_ENABLED=false
BOUNDARY_SIEM_URL=http://localhost:8080
BOUNDARY_SIEM_TOKEN=your-siem-token-here
BOUNDARY_SIEM_TIMEOUT=10000
BOUNDARY_SIEM_BATCH_ENABLED=true
BOUNDARY_SIEM_BATCH_SIZE=100
BOUNDARY_SIEM_FLUSH_INTERVAL=5000
BOUNDARY_SIEM_RETRIES=3
BOUNDARY_SIEM_SOURCE_ID=mediator-node
