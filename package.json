{
  "name": "natlangchain-mediator-node",
  "version": "1.0.0",
  "description": "A lightweight mediator node for NatLangChain that discovers, negotiates, and proposes alignments between explicit intents",
  "main": "dist/index.js",
  "bin": {
    "mediator-node": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js start",
    "status": "node dist/cli.js status",
    "init": "node dist/cli.js init",
    "dev": "ts-node src/cli.ts start",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f mediator-node",
    "mock-chain": "cd examples/mock-chain && npm install && npm start"
  },
  "keywords": [
    "blockchain",
    "mediator",
    "intent",
    "alignment",
    "llm",
    "proof-of-alignment"
  ],
  "author": "kase1111-hash",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "axios": "^1.7.9",
    "chokidar": "^5.0.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "hnswlib-node": "^3.0.0",
    "nanoid": "^3.3.7",
    "openai": "^4.77.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
