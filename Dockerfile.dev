FROM node:18-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Create directories
RUN mkdir -p /app/data/vector-db /app/logs

EXPOSE 9090

# Development mode with ts-node
CMD ["npm", "run", "dev"]
